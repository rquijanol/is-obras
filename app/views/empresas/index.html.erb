<h1>Empresas</h1>

<%= link_to new_empresa_path, class: "btn btn-success" do%>
 <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nueva
<% end %>

<br>
<br>
<table class="table table-bordered">
  <thead>
    <tr>
       <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
         <td><%= empresa.nombre %></td>
         <td><%= empresa.descripcion %></td>
        <td align="center"><%= link_to 'Show', empresa%></td>
        <%if can? :update, @empresa%>
        <td  align="center"><%= link_to 'Edit', edit_empresa_path(empresa)%></td>
        <%end%>
         <%if can? :delete, @empresa%>
        <td align="center"><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


