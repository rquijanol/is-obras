<h1>Obras</h1>

<%= link_to new_obra_path, class: "btn btn-success" do%>
 <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nueva
<% end %>
<br>
<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Nombre</th>
      <th>Importe</th>
      <th>Plazo</th>
      <th>Fecha Inicial</th>
      <th>Fecha Final</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @obras.each do |obra| %>
      <tr>
        <td><%= obra.empresa.nombre %></td>
        <td><%= obra.nombre %></td>
        <td><%= obra.importe %></td>
        <td><%= obra.plazo %></td>
        <td><%= obra.fechainicial %></td>
        <td><%= obra.fechafinal %></td>
        <td><%= link_to 'Show', obra %></td>
        <%if can? :update, @obra%>
        <td><%= link_to 'Edit', edit_obra_path(obra) %></td>
        <%end%>
        <%if can? :delete, @obra%>
        <td><%= link_to 'Destroy', obra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


