<h1>Listing obras</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Importe</th>
      <th>Plazo</th>
      <th>Fechainicial</th>
      <th>Fechafinal</th>
      <th>Empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @obras.each do |obra| %>
      <tr>
        <td><%= obra.nombre %></td>
        <td><%= obra.importe %></td>
        <td><%= obra.plazo %></td>
        <td><%= obra.fechainicial %></td>
        <td><%= obra.fechafinal %></td>
        <td><%= obra.empresa %></td>
        <td><%= link_to 'Show', obra %></td>
        <td><%= link_to 'Edit', edit_obra_path(obra) %></td>
        <td><%= link_to 'Destroy', obra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

